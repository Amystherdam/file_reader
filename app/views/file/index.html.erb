<p id="notice"><%= notice %></p>

<%= form_tag(import_path, method: :post, multipart: true) do %>
  <div class="input-group no-border">
    <%= file_field_tag 'file' %>
    <%= button_tag 'submit'%>
  </div>
<% end %>

<table class="withBorders">
  <thead class="">
    <tr>
      <th><%= @records.human_attribute_name(:buyer) %></th>
      <th><%= @records.human_attribute_name(:description) %></th>
      <th><%= @records.human_attribute_name(:unity_price) %></th>
      <th><%= @records.human_attribute_name(:quantiti) %></th>
      <th><%= @records.human_attribute_name(:address) %></th>
      <th><%= @records.human_attribute_name(:provider) %></th>
      <th><%= @records.human_attribute_name(:total) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td class="withBorders"><%= record.buyer %></td>
        <td class="withBorders"><%= record.description %></td>
        <td class="withBorders"><%= record.unity_price %></td>
        <td class="withBorders"><%= record.quantiti %></td>
        <td class="withBorders"><%= record.address %></td>
        <td class="withBorders"><%= record.provider %></td>          
        <td class="withBorders"><%= record.unity_price * record.quantiti %></td>          
      </tr>
    <% end %>
  </tbody>
</table>
